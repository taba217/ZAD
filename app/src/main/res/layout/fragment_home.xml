<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:actionBarSize"
    android:layout_marginBottom="?actionBarSize"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_margin="@dimen/search_margins"
            android:padding="0dp"
            app:cardCornerRadius="@dimen/search_radius">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/search_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/search_background"
                    android:ems="3"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    app:defaultQueryHint="@string/search_hint"
                    app:queryHint="@string/search_hint"
                    app:searchIcon="@drawable/ic_baseline_search_24" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardView_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/home_child_margins"
        android:layout_marginRight="@dimen/home_child_margins"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/news_card"
            style="@style/news_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/lec_card_radius">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/newspic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/news_lec_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="كيفية \nالصلاة"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/buttom_text_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/news_card_lec_lecturer_name_padding"
                        android:text="حلقة 22" />

                    <TextView
                        style="@style/buttom_text_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lec_item_buttom_background"
                        android:gravity="center"
                        android:padding="@dimen/news_card_lec_lecturer_name_padding"
                        android:text="الشيخ محمد سيد حاج" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recycler_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/horizontallectitle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/news_card_margins_bottom"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/categories_title"
            style="@style/title_text_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الاقسام العامةً" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/categories_card_padding"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_item_margins"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/categories_card_radius">

                <LinearLayout
                    style="@style/main_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/lec_item_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الصوتيات"
                        app:drawableTopCompat="@drawable/ic_album" />

                    <TextView
                        style="@style/buttom_text_categories"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:text="جميع المحاضرات والدروس والعبر" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_item_margins"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/categories_card_radius">

                <LinearLayout
                    style="@style/main_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/lec_item_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الصوتيات"
                        app:drawableTopCompat="@drawable/ic_album" />

                    <TextView
                        style="@style/buttom_text_categories"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:text="جميع المحاضرات والدروس والعبر" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_item_margins"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/categories_card_radius">

                <LinearLayout
                    style="@style/main_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/lec_item_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الصوتيات"
                        app:drawableTopCompat="@drawable/ic_headset" />

                    <TextView
                        style="@style/buttom_text_categories"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:text="جميع المحاضرات والدروس والعبر" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>