<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/player_list_card_radius"
    app:cardElevation="@dimen/player_list_card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="6dp">

            <TextView
                style="@style/media_list_text"
                android:id="@+id/episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المحاضرة 1" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
                <TextView
                android:id="@+id/shak_name"
                style="@style/media_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="محمد سيد حاج" />

              <TextView
                  android:id="@+id/divider3"
                  android:layout_width="wrap_content"
                  android:text="-"
                  android:layout_margin="4dp"
                  android:layout_height="match_parent"
                  android:background="?android:attr/listDivider" />

              <TextView
                style="@style/media_list_text"
                android:id="@+id/lec_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سلسلة مدارج السالكين" />
          </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp">

                <TextView
                    style="@style/media_list_category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/category_player_list_item"
                    android:padding="2dp"
                    android:text="دروس"
                    android:textColor="@color/white" />
                <TextView
                    style="@style/media_list_category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/category_player_list_item"
                    android:padding="2dp"
                    android:text="عبر"
                    android:textColor="@color/white" />
                <TextView
                    style="@style/media_list_category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/category_player_list_item"
                    android:padding="2dp"
                    android:text="محاضرات"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_margin="4dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="74dp"
                android:layout_height="72dp"
                android:src="@mipmap/shak" />
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</androidx.cardview.widget.CardView>