<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="news_lec_name">
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/news_card_lec_name_margins</item>
    </style>

    <style name="lec_item_title_name">
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="buttom_text_card">
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="buttom_text_categories">
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="title_text_categories">
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textColor">@color/categories_title_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="app_bar_style">
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="buttom_categories_card_magins">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="news_card">

        <item name="android:layout_marginStart">@dimen/home_child_margins</item>
        <item name="android:layout_marginEnd">@dimen/home_child_margins</item>
    </style>

    <style name="main_categories">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:onClick">categoryClick</item>
    </style>

    <style name="category_spinner" parent="android:Widget.Spinner">
        <item name="background">@drawable/category_spinner</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/category_spinner</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="lec_name_fragment_media">
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:layout_margin">@dimen/fragment_media_child_margins</item>
        <item name="background">@drawable/media_lec_name_background</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="lecturer_name_fragment_media">
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textSize">@dimen/titles_text_size</item>
        <item name="android:layout_margin">@dimen/fragment_media_child_margins</item>
    </style>

    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="media_list_text">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="media_list_category_text">
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="exo_lec_text">
        <item name="android:layout_margin">4dp</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>